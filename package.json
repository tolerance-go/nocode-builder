{
  "name": "nocode-builder",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "ci:remote": "pnpm image:pull && pnpm image:start",
    "image:start": "node ./scripts/image-up.js",
    "image:pull": "node ./scripts/pull-cloud-images.js",
    "ci": "pnpm image:build-and-tag && pnpm image:tag-and-push-remote",
    "format": "prettier --write \"*/src/**/*.(ts|tsx)\"",
    "image:tag-and-push-remote": "node ./scripts/tag-and-push-remote.js",
    "image:build-and-tag": "node ./scripts/image-build-and-tag.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up -d --remove-orphans",
    "docker:dev-db": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up postgres -d --remove-orphans",
    "docker:dev-server": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up server -d --remove-orphans",
    "dev:e2e": "pnpm --filter admin cypress:open",
    "dev:admin": "pnpm --filter admin dev",
    "dev:server": "pnpm --filter server start:dev",
    "daily:run": "pnpm format && pnpm --filter server recursive run daily:run && pnpm --filter=!server recursive run daily:run && pnpm docker:dev && pnpm cypress:run",
    "cypress:run": "pnpm --filter admin cypress:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "execa": "^9.3.0",
    "glob": "^10.4.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "prettier": "^3.0.0",
    "yaml": "^2.4.5"
  }
}
