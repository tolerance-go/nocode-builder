{
  "name": "nocode-builder",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "remote::ci": "pnpm remote::pull-images && pnpm remote::image-up",
    "remote::image-up": "node ./scripts/image-up.js",
    "remote::pull-images": "node ./scripts/pull-images.js",
    "ci": "pnpm image:build-and-tag && pnpm image:tag-and-push-remote",
    "format": "prettier --write \"*/src/**/*.(ts|tsx)\"",
    "image:tag-and-push-remote": "node ./scripts/tag-and-push-remote.js",
    "image:build-and-tag": "node ./scripts/image-build-and-tag.js",
    "dev-docker": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up -d --remove-orphans",
    "dev-docker:db": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up postgres -d --remove-orphans",
    "dev-docker:server": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml up server -d --remove-orphans",
    "dev:e2e": "pnpm --filter admin cypress:open",
    "dev:admin": "pnpm --filter admin dev",
    "dev:server": "pnpm --filter server start:dev",
    "everyDay": "pnpm format && pnpm --filter server recursive run everyDay && pnpm --filter=!server recursive run everyDay && pnpm docker && pnpm cypress:run",
    "cypress:run": "pnpm --filter admin cypress:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "execa": "^9.3.0",
    "glob": "^10.4.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "prettier": "^3.0.0",
    "yaml": "^2.4.5"
  }
}
