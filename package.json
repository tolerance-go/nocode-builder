{
  "name": "nocode-builder",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "image:build-remote": "node ./scripts/image-build-remote.js --version $(node -pe 'require(\"./package.json\").version')",
    "image:build-and-tag": "node ./scripts/image-build-and-tag.js",
    "format": "prettier --write \"*/src/**/*.(ts|tsx)\"",
    "docker:db": "docker-compose down && docker-compose up postgres --build -d --remove-orphans",
    "docker:server": "docker-compose down && docker-compose up server --build -d --remove-orphans",
    "docker": "docker-compose down && docker-compose up --build -d --remove-orphans",
    "cypress:run": "pnpm --filter admin cypress:run",
    "dev:e2e": "pnpm --filter admin cypress:open",
    "dev:admin": "pnpm --filter admin dev",
    "dev:server": "pnpm --filter server start:dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "everyDay": "pnpm format && pnpm --filter server recursive run everyDay && pnpm --filter=!server recursive run everyDay && pnpm docker && pnpm cypress:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "glob": "^10.4.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "prettier": "^3.0.0"
  }
}
